@model IEnumerable<Cinemang.Models.Rating>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_StaffHomeLayout.cshtml";
}


<div class="header">
    <h2>
        Kullanıcı Değerlendirmelerini Listele
        <small>Kullanıcıların film değerlendirmelerini burada görüntüleyebilirsiniz.</small>
    </h2>
    <ul class="header-dropdown m-r--5">
        <li class="dropdown">
            <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                <i class="material-icons">more_vert</i>
            </a>
            <ul class="dropdown-menu pull-right">
                <li><a href="javascript:void(0);">Action</a></li>
                <li><a href="javascript:void(0);">Another action</a></li>
                <li><a href="javascript:void(0);">Something else here</a></li>
            </ul>
        </li>
    </ul>
</div>
<div class="body table-responsive">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Movie.mName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users.uUsername)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.rRating)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Movie.mName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Users.uUsername)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.rRating)
                </td>

            </tr>
        }

    </table>
</div>







