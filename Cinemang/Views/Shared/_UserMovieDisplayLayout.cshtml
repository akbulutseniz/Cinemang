                    <div class="mainmenu">
                        <ul id="primary-menu">
                            <li><a class="active" href="@Url.Action("Index","Home")">Anasayfa</a></li>
                            <li><a href="@Url.Action("Index","UserMovies")">Filmler</a></li>
