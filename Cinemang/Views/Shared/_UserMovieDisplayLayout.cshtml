                    <a href=@Url.Action("Index","Home")><img src="~/Content/User/assets/img/logoooo.png" alt="logo" /></a>
                </div>
                <div class="header-right">
                    <form action="#">
                        <select>
                            <option value="Movies">Filmler</option>
