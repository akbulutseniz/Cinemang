@model IEnumerable<Cinemang.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_UserMoviesLayout.cshtml";
}

@foreach (var item in Model)
{
    <div class="col-md-4 col-sm-6 soon released">
        <div class="single-portfolio">
            <div class="single-portfolio-img">
                <a href="@Url.Action("Display", "UserDisplayMovieDetails", new { id = item.m_id })"><img src=@Html.DisplayFor(modelItem => item.mImageUrl) alt="portfolio" /></a>
            </div>
            <div class="portfolio-content">
                <h2>@Html.DisplayFor(modelItem => item.mName)</h2>
                <div class="review">
                    <div class="author-review">
                        <i class="icofont icofont-star"></i>
                        <i class="icofont icofont-star"></i>
                        <i class="icofont icofont-star"></i>
                        <i class="icofont icofont-star"></i>
                        <i class="icofont icofont-star"></i>
                    </div>
                    <h4>@Html.DisplayFor(modelItem => item.mCountry)</h4>
                </div>
            </div>
        </div>
    </div>
}

