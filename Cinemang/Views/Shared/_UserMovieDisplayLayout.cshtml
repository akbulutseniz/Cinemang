                                    <li><a href="movie-details.html">Movie Details</a></li>
                                </ul>
                            </li>
                            <li><a class="theme-btn" href="#"><i class="icofont icofont-ticket"></i> Biletlerim </a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- header section end -->
    <!-- breadcrumb area start -->
    <section class="breadcrumb-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb-area-content">
                        <h1>Film Detayları</h1>
                    </div>
                </div>
            </div>
        </div>
    </section><!-- breadcrumb area end -->
    @RenderBody()
    <!-- footer section start -->
    <!-- footer section start -->
    <footer class="footer">
        <div class="container">
            RenderBody()
            <div class="row">
                <div class="col-lg-3 col-sm-6">
                    <div class="widget">
                        <img src="~/Content/User/assets/img/logoooo.png" alt="about" />
                        <p>Kuruçeşme Mh. Deü Kaynaklar Yerleşkesi Pk:35370 Buca/izmir</p>
                        <h6><span>İletişim: </span>(0232) 412 74 01</h6>
                    </div>
                </div>
                <div class="col-lg-3 col-sm-6">
                    <div class="widget">
